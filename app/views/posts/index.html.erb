<h1>投稿一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.image %></td>
    <td><%= link_to '詳細', post_path(post.id) %></td>
    <td><%= link_to "編集", edit_post_path(post.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しい投稿をする', new_post_path %>
