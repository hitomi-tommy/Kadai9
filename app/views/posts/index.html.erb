<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
    <th>ユーザー</th>
    <th>画像</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.user.name %></td>
    <td><%= image_tag post.image.url %></td>
    <td><%= link_to '確認', post_path(post.id), class: 'btn btn-primary' %></td>
    <td><%= link_to "編集", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-primary' %></td>
    <td><%= link_to '削除', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-primary' %></td>
  </tr>
<% end %>
</table>
<%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
