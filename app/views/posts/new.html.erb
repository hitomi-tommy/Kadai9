<%= form_with(model: @post, local: true) do |form| %>
  <div class="post_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
  <%= form.label :image %>
  <%= image_tag(@post.image.url) if @post.image && @post.image.url %>
  <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>
